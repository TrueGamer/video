<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <com.huanxi.renrentoutiao.ui.view.video.VerticalViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        >

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:padding="7dp"
            android:src="@mipmap/icon_back"
            android:visibility="invisible"
            />
    </RelativeLayout>

    <com.huanxi.renrentoutiao.ui.view.video.LoadingBar
        android:id="@+id/loading"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="47dp"
        app:LoadingBgColor="#80939393"
        app:LoadingFgColor="#b3ffffff"
        />

    <LinearLayout
        android:id="@+id/comment_group"
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_bottom_height"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:visibility="invisible"
        >

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:padding="10dp"
            android:src="@mipmap/icon_edit"
            />

        <TextView
            android:id="@+id/video_say"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/video_say"
            android:textColor="#fff"
            android:textSize="16sp"
            />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fl_pro"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:layout_gravity="bottom"
        android:visibility="gone">

        <com.huanxi.renrentoutiao.ui.view.CircleImageView
            android:id="@+id/img_pro_box"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/icon_read_progress_close"
            android:layout_gravity="center"/>

        <com.huanxi.renrentoutiao.ui.view.RoundProgressBar
            android:id="@+id/pb_read_progress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:chargingColor="@color/white_t"
            app:defaultRoundColor="@color/textColorPrimary"
            app:electriTextColor="@color/white_color"
            app:electriTextSize="13sp"
            app:max="100"
            app:percenTextColor="@color/white_color"
            app:percenTextSize="14sp"
            app:roundProgressColor="@color/color_blue"
            app:roundWidth="5dp" />

    </FrameLayout>

    <com.huanxi.renrentoutiao.ui.view.ReadArticleAwaryView
        android:id="@+id/award_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:alpha="0"
        android:scaleX="0.5"
        android:scaleY="0.5"
        />

</RelativeLayout>